                    <Microsoft_Phone_Controls_Maps:MapTileLayer.TileSources>
                        <GoogleTileSource:GoogleTile TileTypes="Street" />
                    </Microsoft_Phone_Controls_Maps:MapTileLayer.TileSources>
                </Microsoft_Phone_Controls_Maps:MapTileLayer>
                <Microsoft_Phone_Controls_Maps:MapItemsControl x:Name="MapItems" ItemsSource="{Binding Pushpins}">
                    <Microsoft_Phone_Controls_Maps:MapItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Microsoft_Phone_Controls_Maps:Pushpin Style="{StaticResource PushpinStyle}"
            					MouseLeftButtonUp="Pushpin_MouseLeftButtonUp"
            					Location="{Binding geoCoor}"
            					Background="{Binding background, Converter={StaticResource PushpinTypeBrushConverter}}">
                                <Image Source="{Binding Icon}" />
                            </Microsoft_Phone_Controls_Maps:Pushpin>
                        </DataTemplate>
                    </Microsoft_Phone_Controls_Maps:MapItemsControl.ItemTemplate>
                </Microsoft_Phone_Controls_Maps:MapItemsControl>


                <Microsoft_Phone_Controls_Maps:MapTileLayer x:Name="wateroverlay" Margin="0,0,0,32" Visibility="Collapsed">
                    <Microsoft_Phone_Controls_Maps:MapTileLayer.TileSources>
